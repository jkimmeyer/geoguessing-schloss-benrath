{
  "plugins": [
    [
      "@csstools/postcss-global-data",
      {
        "files": [
          "styles/variables/viewports.css"
        ]
      }
    ],
    "postcss-flexbugs-fixes",
    "postcss-nesting",
    [
      "postcss-preset-env",
      {
        "autoprefixer": {
          "flexbox": "no-2009"
        },
        "stage": 3,
        "features": {
          "custom-properties": false,
          "logical-properties-and-values": false,
          "nesting-rules": false
        }
      }
    ],
    "postcss-custom-media"
  ]
}
